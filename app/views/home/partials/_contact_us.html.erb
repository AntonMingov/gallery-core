<div id="contact" class="scroll-smooth relative z-10 bg-gradient-to-b from-black via-black/80 to-black pt-32 backdrop-blur-3xl lg:pb-32 lg:pt-0">
  <div class="mx-auto max-w-7xl px-6 lg:px-12 xl:px-6 2xl:px-0">
    <div class="mt-24">
      <div class="grid gap-6 border-t border-white/30 pt-10 lg:grid-cols-3 lg:gap-24">

        <!-- Contact Form - 2/3 width -->
        <div class="lg:col-span-2">
          <%= form_with(model: @contact_form, url: contacts_path, class: 'space-y-8') do |form| %>
            <div class="font-bold text-white text-5xl md:text-6xl mb-5 md:pb-10">
              <%= t('contacts.title') %>
            </div>
            <div class="grid gap-8 sm:grid-cols-2 sm:gap-4">
              <div>
                <%= form.label :first_name, t('contacts.first_name'), class: 'tracking-wide text-white', for: 'contact_first_name' %>
                <%= form.text_field :first_name, placeholder: t('contacts.placeholder_first_name'), class: 'mt-3 w-full border border-white/20 bg-transparent px-4 py-3 text-white/70 outline-none focus:ring-1 focus:ring-primary', id: 'contact_first_name' %>
              </div>
              <div>
                <%= form.label :last_name, t('contacts.last_name'), class: 'tracking-wide text-white', for: 'contact_last_name' %>
                <%= form.text_field :last_name, placeholder: t('contacts.placeholder_last_name'), class: 'mt-3 w-full border border-white/20 bg-transparent px-4 py-3 text-white/70 outline-none focus:ring-1 focus:ring-primary', id: 'contact_last_name' %>
              </div>
            </div>
            <div>
              <%= form.label :email, t('contacts.email'), class: 'tracking-wide text-white', for: 'contact_email' %>
              <%= form.email_field :email, placeholder: t('contacts.placeholder_email'), class: 'mt-3 w-full border border-white/20 bg-transparent px-4 py-3 text-white/70 outline-none focus:ring-1 focus:ring-primary', id: 'contact_email' %>
            </div>
            <div>
              <%= form.label :message, t('contacts.message'), class: 'tracking-wide text-white', for: 'contact_message' %>
              <%= form.text_area :message, placeholder: t('contacts.placeholder_message'), class: 'mt-3 w-full border border-white/20 bg-transparent px-4 py-3 text-white/70 outline-none focus:ring-1 focus:ring-primary resize-none', id: 'contact_message', style: 'min-height: 150px;' %>
            </div>

            <button type="submit" class="group ml-auto flex h-12 w-auto items-center overflow-hidden bg-white px-5 transition-all duration-300 hover:bg-primary">
              <span class="relative uppercase tracking-wide text-black group-hover:text-white">
                <%= t('contacts.send_message') %>
              </span>
            </button>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
